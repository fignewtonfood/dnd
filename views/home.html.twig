<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Your adventure starts here!</title>
        <link href='https://fonts.googleapis.com/css?family=Overlock+SC' rel='stylesheet' type='text/css'>
        <link rel='stylesheet' href='./css/main.css'>
        <meta name="viewport" content="width=device-width">

    </head>
    <body>

        {% embed "header.html.twig" %}
        {% endembed %}

        <section class="main group">

            <h2 class="main__title">Your Adventure Begins ...</h2>

            <p class="main__description">Create a character here!</p>


            <a class="main__callToAction" href="/race">Create Your Character</a>


        </section>


            <aside class="site__progress">

                <!-- progress -->
                <div class="progress__bar"></div>

            </aside>

        </div>

        {% embed "progress.html.twig" %}
        {% endembed %}

        {% if characters is not empty %}
            <h3>Or choose from previously created characters:</h3>
                {% for character in characters %}
                    <ul>
                        <li><a href="/summary/{{ character.getId }}">{{ character.getName }}</a></li>
                    </ul>
                {% endfor %}
        {% endif %}

        {% embed "footer.html.twig" %}
        {% endembed %}

    </body>

</html>
